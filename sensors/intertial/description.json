{
  "name": "inertial",
  "systems": {
    "pi": {
      "platform": "linux",
      "arch": "arm"
    }
  },
  "bootstrap": [
    {
      "cmd": "xBeeSerialReader",
      "parameters": {},
      "systems": [
        "pi"
      ]
    }
  ],
  "data": [
    {
      "description": "X position of the mouse",
      "osc_format": "/mouse/x f"
    },
    {
      "description": "Y position of the mouse",
      "osc_format": "/mouse/y f"
    }
  ],
  "request": {
    "default": {
      "check": [
        {
          "cmd": "xBeeSerialReader",
          "parameters": {
            "-c": null
          },
          "systems": [
            "pi"
          ]
        }
      ],
      "execute": [
        {
          "cmd": "xBeeSerialReader",
          "parameters": {
            "-a": "ADDRESS",
            "-p": "PORT"
          },
          "sudo": true,
          "systems": [
            "pi"
          ]
        }
      ],
      "generate": null
    }
  }
}
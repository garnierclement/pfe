{
  "name": "inertial",
  "system": {
    "pi": {
      "platform": "linux",
      "arch": "arm"
    }
  },
  "bootstrap": [
    {
      "cmd": "xBeeSerialReader",
      "parameter": {},
      "system": [
        "pi"
      ]
    }
  ],
  "request": {
    "default": {
      "check": [
        {
          "cmd": "xBeeSerialReader",
          "parameter": {
            "-c": null
          },
          "system": [
            "pi"
          ]
        }
      ],
      "execute": [
        {
          "cmd": "xBeeSerialReader",
          "parameter": {
            "-a": "ADDRESS",
            "-p": "PORT"
          },
          "sudo": true,
          "system": [
            "pi"
          ]
        }
      ],
      "generate": null
    }
  }
}
{
  "name": "mouse",
  "systems": {
    "linux": {
      "platform": "linux"
    },
    "osx": {
      "platform": "darwin"
    },
    "win": {
      "platform": "win32"
    }
  },
  "bootstrap": [
    {
      "cmd": "checkMouse-osx.sh",
      "systems": [
        "osx"
      ]
    },
    {
      "cmd": "checkMouse-linux.sh",
      "systems": [
        "linux"
      ]
    },
    {
      "cmd": "checkMouse-windows.bat",
      "systems": [
        "win"
      ]
    }
  ],
  "data": [
    {
      "description": "X position of the mouse",
      "osc_format": "/mouse/x f"
    },
    {
      "description": "Y position of the mouse",
      "osc_format": "/mouse/y f"
    }
  ],
  "request": {
    "default": {
      "options": [
        "$ADDRESS",
        "$PORT",
        "$GENERATED_PATCH"
      ],
      "check": [
        {
          "cmd": "checkMouse-osx.sh",
          "systems": [
            "osx"
          ]
        },
        {
          "cmd": "checkMouse-linux.sh",
          "systems": [
            "linux"
          ]
        },
        {
          "cmd": "checkMouse-windows.bat",
          "systems": [
            "win"
          ]
        }
      ],
      "generate": [
        {
          "cmd": "generateMousePosition.sh",
          "parameters": [
            "$ADDRESS",
            "$PORT",
            "$GENERATED_PATCH"
          ],
          "systems": [
            "osx",
            "linux"
          ]
        }
      ],
      "execute": [
        {
          "cmd": "/Applications/Pd-extended.app/Contents/MacOS/Pd-extended",
          "parameters": [
            "$GENERATED_PATCH"
          ],
          "systems": [
            "osx"
          ]
        }
      ]
    }
  }
}
{
  "name": "inertial",
  "systems": {
    "pi": {
      "platform": "linux",
      "arch": "arm"
    }
  },
  "bootstrap": [
    {
      "path": "InertialSender/XBeeOnPi",
      "cmd": "./xBeeReadSerial",
      "parameters": [
        "-c"
      ],
      "systems": [
        "pi"
      ]
    }
  ],
  "request": {
    "default": {
      "options": [
        "$ADDRESS",
        "$PORT",
        "$GENERATED_PATCH"
      ],
      "check": [
        {
          "path": "InertialSender/XBeeOnPi",
          "cmd": "./xBeeReadSerial",
          "parameters": [
            "-c"
          ],
          "systems": [
            "pi"
          ]
        }
      ],
      "execute": [
        {
          "path": "InertialSender/XBeeOnPi",
          "cmd": "./xBeeReadSerial",
          "parameters": [
            "-a",
            "$ADDRESS",
            "-p",
            "$PORT"
          ],
          "sudo": true,
          "systems": [
            "pi"
          ]
        }
      ]
    }
  }
}
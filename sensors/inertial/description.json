{
  "name": "inertial",
  "systems": {
    "pi": {
      "platform": "linux",
      "arch": "arm"
    }
  },
  "bootstrap": [
    {
      "cmd": "InertialSender/XBeeOnPi/xBeeReadSerial",
      "parameters": {},
      "systems": [
        "pi"
      ]
    }
  ],
  "request": {
    "default": {
       "options": [
        "$ADDRESS",
        "$PORT",
        null
      ],
      "check": [
        {
          "cmd": "InertialSender/XBeeOnPi/xBeeReadSerial",
          "parameters": {
            "-c": null
          },
          "systems": [
            "pi"
          ]
        }
      ],
      "execute": [
        {
          "cmd": "InertialSender/XBeeOnPi/xBeeReadSerial",
          "parameters": {
            "-a": "ADDRESS",
            "-p": "PORT"
          },
          "sudo": true,
          "systems": [
            "pi"
          ]
        }
      ],
      "generate": null
    }
  }
}
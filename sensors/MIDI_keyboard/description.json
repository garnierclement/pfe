{
  "name": "MIDI_keyboard",
  "systems": {
    "linux": {
      "platform": "linux"
    }
  },
  "bootstrap": [
    {
      "cmd": "./checkMidiKeyboard.sh",
      "systems": [
        "linux"
      ]
    }
  ],
  "data": [
    {
      "description": "Key Signal",
      "osc_format": "/note2/ i"
    },
    {
      "description": "Control Signal",
      "osc_format": "/ctl/ f"
    }
  ],
  "request": {
    "default": {
      "options": [
        "$ADDRESS",
        "$PORT",
        "$GENERATED_PATCH"
      ],
      "check": [
        {
          "cmd": "./checkMidiKeyboard.sh",
          "systems": [
            "linux"
          ]
        }
      ],
      "generate": [
        {
          "cmd": "./generateMIDI.sh",
          "parameters": [
            "$ADDRESS",
            "$PORT",
            "$GENERATED_PATCH"
          ],
          "systems": [
            "linux"
          ]
        }
      ],
      "execute": [
        {
          "cmd": "pd-extended",
          "parameters": [
            "-nogui",
            "-oss",
            "-midiindev",
            "1",
            "-open",
            "$GENERATED_PATCH"
          ],
          "systems": [
            "linux"
          ],
          "path": "../../var/run"
        }
      ]
    }
  }
}
